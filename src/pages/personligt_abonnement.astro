---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import index1 from "/public/imgs/index/index1.webp";
---

<MainLayout title="Personligt abonnement">
  <section class="bg_image text-grøn-700">
    <div class="max-w-4xl px-s md:px-lg py-s md:py-lg flex flex-col gap-m">
      <div class="flex flex-col gap-xs">
        <h2 class="font-headline text-headline2_s md:text-headline2_lg">
          Velkommen til dit personlige blomsterabonnement!
        </h2>
        <p class="font-light text-secondbody_s md:text-secondbody_lg">
          Lad os hjælpe dig med at få smukke, friske buketter leveret lige til
          døren. <br />Det tager kun få minutter at tilpasse dit abonnement.
        </p>
      </div>
      <div class="block md:hidden">
        <!-- Button for small screens -->
        <Button size="small" href="/abonnement_flow/budget"
          >Skræddersy dit abonnement</Button
        >
      </div>
      <div class="hidden md:block">
        <!-- Button for large screens -->
        <Button size="large" href="/abonnement_flow/budget"
          >Skræddersy dit abonnement</Button
        >
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .bg_image {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
  }
  .bg_image:before {
    content: " ";
    display: inline-block;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-image: url("/public/imgs/index/index1.webp");
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 0.2;
  }
</style>
