<script>
  document.addEventListener("DOMContentLoaded", () => {
  const dynamicText = document.querySelector(".text-dynamic");
  const phrases = [
   "DEN NYBAGTE MOR", "FØDSELAREN", "TEAMET", "DIN KÆRE", "DIN MOR", "JUBILAREN", "ARBEJDSPLADSEN", "DIN MORMOR", "DIN SØSTER", "KONTORET", "STUDENTEN", "DINE KOLLEGAER"
  ];

  let index = 0;

  function updateText() {
    dynamicText.textContent = phrases[index];
    index = (index + 1) % phrases.length; // Loop tilbage til start
  }

  setInterval(updateText, 1500); // Skift tekst hver 3. sekund
});
</script>