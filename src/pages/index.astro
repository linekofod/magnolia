import blomst_2 from "/public/imgs/blomster_animation/blomst_2.webp";
import blomst_3 from "/public/imgs/blomster_animation/blomst_3.webp";
import blomst_4 from "/public/imgs/blomster_animation/blomst_4.webp";
import blomst_5 from "/public/imgs/blomster_animation/blomst_5.webp";
import blomst_6 from "/public/imgs/blomster_animation/blomst_6.webp";
import blomst_7 from "/public/imgs/blomster_animation/blomst_7.webp";
import blomst_8 from "/public/imgs/blomster_animation/blomst_8.webp";
import blomst_9 from "/public/imgs/blomster_animation/blomst_9.webp";
import blomst_10 from "/public/imgs/blomster_animation/blomst_10.webp";
import blomst_11 from "/public/imgs/blomster_animation/blomst_11.webp";
import blomst_12 from "/public/imgs/blomster_animation/blomst_12.webp";
---

<MainLayout title="Magnolia">
  <!-- HERO -->
  <section
    class="relative bg-grøn-500 w-full h-screen flex flex-col gap-lg items-center pt-7xl lg:pt-8xl xl:pt-7xl 2xl:justify-center 2xl:pt-0 text-lyserød-500 overflow-clip"
  >
    <div class="flex flex-col gap-4xs items-center">
      <h1 class="font-headline text-display_s md:text-display_lg uppercase">
        Magnolia
      </h1>
      <p class="font-light text-secondbody_s md:text-secondbody_lg">
        Blomsterabonnement på dine betingelser
      </p>
    </div>
    <div class="block md:hidden">
      <!-- Button for small screens -->
      <Button size="small" variant="secondary" href="/personligt_abonnement"
        >Skræddersy dit abonnemet nu</Button
      >
    </div>
    <div class="hidden md:block">
      <!-- Button for large screens -->
      <Button size="large" variant="secondary" href="/personligt_abonnement"
        >Skræddersy dit abonnemet nu</Button
      >
    </div>
    <!-- Højre blomsterkrans -->
    <div>
      <Image
        src={blomst_1}
        alt=""
        class="w-1/3 xl:w-1/4 absolute -right-[8%] xl:right-[17%] top-[53%] xl:-top-[27%] z-10"
      />
      <Image
        src={blomst_2}
        alt=""
        class="w-1/3 absolute right-[13%] xl:-right-[6%] top-[56%] xl:-top-[35%]"
      />
      <Image
        src={blomst_3}
        alt=""
        class="w-1/3 md:w-1/4 absolute right-[32%] xl:-right-[5%] top-[56%] xl:top-[4%]"
      />
      <Image
        src={blomst_4}
        alt=""
        class="w-1/3 md:w-1/4 absolute right-[48%] xl:-right-[5%] top-[56%] xl:top-[30%] z-10"
      />
      <Image
        src={blomst_5}
        alt=""
        class="w-1/3 xl:w-1/2 absolute right-[65%] xl:-right-[15%] top-[56%] xl:top-[25%]"
      />
      <Image
        src={blomst_6}
        alt=""
        class="w-1/3 absolute -left-[10%] xl:left-[57%] top-[50%] xl:top-[53%]"
      />
    </div>
    <!-- Venstre blomsterkrans -->
    <div>
      <Image
        src={blomst_7}
        alt=""
        class="w-1/3 xl:w-1/4 absolute -right-[8%] xl:right-[60%] top-[8%] md:top-[0%] xl:-top-[24%] z-10"
      />
      <Image
        src={blomst_8}
        alt=""
        class="w-1/3 md:w-1/4 absolute right-[12%] xl:right-[78%] top-[5%] md:top-[0%] xl:-top-[15%] z-30"
      />
      <Image
        src={blomst_9}
        alt=""
        class="w-1/3 absolute right-[28%] xl:right-[78%] top-[3%] md:-top-[8%] xl:-top-[8%] z-20"
      />
      <Image
        src={blomst_10}
        alt=""
        class="w-1/3 xl:w-1/4 absolute right-[46%] xl:right-[74%] top-[5%] md:-top-[5%] xl:top-[40%] z-10"
      />
      <Image
        src={blomst_11}
        alt=""
        class="w-1/3 absolute left-[5%] xl:-left-[12%] top-[6%] md:-top-[4%] xl:top-[42%]"
      />
      <Image
        src={blomst_12}
        alt=""
        class="w-1/4 xl:w-1/5 absolute -left-[7%] xl:left-[12%] top-[10%] md:top-[3%] xl:top-[70%] rotate-90 xl:rotate-0"
      />
    </div>
  </section>

  <!-- ROLLING BANNER -->
  <div class="mb-lg md:mb-4xl">
    <Indexbanner />
  </div>

  <!-- OM OS -->
  <section class="mx-xs md:mx-4xl mb-xl md:mb-4xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-sm md:gap-xl items-center">
      <!-- Billede (venstre kolonne) -->
      <div>
        <Image
          src={index0}
          alt=""
          class="w-full h-full aspect-[4/5] object-cover fadein"
        />
      </div>

      <!-- Tekst (højre kolonne) -->
      <div>
        <h2
          class="font-headline text-headline2_s md:text-headline2_lg text-grøn-700 mb-4xs"
        >
          MAGNOLIA
        </h2>
        <h3 class="font-headline text-headline3_s text-grøn-700 mb-m">
          blomsterabonnement på dine betingelser
        </h3>
        <div class="flex flex-col gap-s">
          <p class="text-grøn-700 font-light">
            Hos Magnolia tilbyder vi et unikt blomsterabonnement, der kombinerer
            bæredygtighed og skønhed. Vores buketter er ikke kun designet til at
            bringe glæde til dit hjem, men også til at skabe en grønnere
            fremtid. Vi forener overskudsblomster, miljøcertificerede valg og
            lokale avlere, hvilket gør vores abonnement både ansvarligt og
            smukt.
          </p>
          <p class="text-grøn-700 font-light">
            Oplev hvordan blomster kan være en del af en bæredygtig livsstil –
            altid på dine betingelser, og leveret direkte til døren. Vi skaber
            smukke øjeblikke med omtanke for planeten.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- DYNAMISK TEKSTUDSKIFTNING -->
  <section
    class="px-xl md:px-4xl py-lg md:py-4xl bg-beige-50 h-fit flex items-center justify-left text-left mb-xl md:mb-4xl"
  >
    <div>
      <h2
        class="font-headline text-headline_s md:text-headline3_lg text-grøn-700"
      >
        HAR DU HUSKET AT FORKÆLE
        <span
          class="text-dynamic font-headline text-headline2_md text-beige-600"
        >
        </span>
      </h2>
      <h2
        class="font-headline text-headline_s md:text-headline3_lg text-grøn-700 mt-md"
      >
        MED ET BLOMSTERABONNEMENT <br /> HOS MAGNOLIA?
      </h2>
    </div>
  </section>

  <!-- VORES BUKETTER -->
  <section
  class="bg-neutral-50 flex items-center justify-center min-h-250vh] mb-xl md:mb-4xl]">
  <section id="buketter-slider" class="text-center w-full max-w-3xl mx-auto">
    <h2
      class="font-headline text-headline2_s md:text-headline2_lg text-grøn-700 mb-xs md:mb-sm">
      Vores buketter
    </h2>
    <div class="relative">
      <!-- Venstre pil -->
      <button
        id="buketter-prev-btn"
        class="absolute left-0 top-1/2 transform -translate-y-1/2 z-10 bg-white shadow-lg p-3 rounded-full">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none">
          <path
            d="M15 19L8 12L15 5"
            stroke="#000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>

      <!-- Karrusel container -->
      <div
        id="buketter-carousel"
        class="flex gap-xl items-center overflow-hidden">
        <!-- Farverige nuancer -->
        <div
          class="buketter-slider-item flex-shrink-0 w-64 h-64 flex flex-col items-center justify-center p-ml">
          <Image
            src={farver}
            alt=""
            class="w-[362px] h-[504px] object-cover" />
          <div class="text-left justify-start">
            <h3
              class="font-headline text-headline3_s text-grøn-700 mb-xs mt-xs">
              Farverige Nuancer
            </h3>
            <p class="font-light text-body_s text-grøn-700 mb-xs w-[362px]">
              Livlige og glædesfyldte buketter i et smukt spil af farver. Perfekt til at bringe energi og elegance ind i dit hjem – en farverig hyldest til skønheden i blomster.
            </p>
          </div>
        </div>

        <!-- Hvide nuancer med badge -->
        <div
        class="buketter-slider-item flex-shrink-0 w-64 h-64 flex flex-col items-center justify-center relative">
        <!-- Badge -->
        <div
          class="badge absolute top-4 right-0 bg-beige-50 text-grøn-700 text-body_s uppercase font-light">
         Mest populære
        </div>
      
        <!-- Image -->
        <Image
          src={hvid}
          alt=""
          class="w-[362px] h-[504px] object-cover" />
        
        <!-- Text -->
        <div class="text-left justify-start">
          <h3
            class="font-headline text-headline3_s text-grøn-700 mb-xs mt-xs">
            Hvide Nuancer
          </h3>
          <p class="font-light text-body_s text-grøn-700 mb-xs w-[362px]">
            Elegante og tidløse buketter, der bringer ro og renhed ind i dit hjem. En harmonisk kombination af klassiske hvide blomster og bløde grønne detaljer – et strejf af enkelhed og luksus til hverdagen.
          </p>
        </div>
      </div>

        <!-- Røde nuancer -->
        <div
          class="buketter-slider-item flex-shrink-0 w-64 h-64 flex flex-col items-center justify-center">
          <Image
            src={rød}
            alt=""
            class="w-[362px] h-[504px] object-cover" />
          <div class="text-left justify-start">
            <h3
              class="font-headline text-headline3_s text-grøn-700 mb-xs mt-xs">
              Røde Nuancer
            </h3>
            <p class="font-light text-body_s text-grøn-700 mb-xs w-[362px]">
              Blidhed og raffineret skønhed forenes i vores røde buketter. Disse varme og elegante kreationer tilføjer en romantisk og indbydende atmosfære til ethvert rum.
            </p>
          </div>
        </div>

        <!-- Blå nuancer -->
        <div
          class="buketter-slider-item flex-shrink-0 w-64 h-64 flex flex-col items-center justify-center">
          <Image
            src={blå}
            alt=""
            class="w-[362px] h-[504px] object-cover" />
          <div class="text-left justify-start">
            <h3
              class="font-headline text-headline3_s text-grøn-700 mb-xs mt-xs">
              Blå Nuancer
            </h3>
            <p class="font-light text-body_s text-grøn-700 mb-xs w-[362px]">
              En følelse af ro og fordybelse møder dig i vores blå buketter. Med deres kølige og sofistikerede toner skaber de et elegant udtryk og en behagelig atmosfære.
            </p>
          </div>
        </div>
      </div>

      <!-- Højre pil -->
      <button
        id="buketter-next-btn"
        class="absolute right-0 top-1/2 transform -translate-y-1/2 z-10 p-ml">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none">
          <path
            d="M9 5L16 12L9 19"
            stroke="#000"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>
  </section>
</section>

  <!-- SKRÆDDERSY DIT ABONNOMENT -->
  <section
    class="grid grid-cols-1 lg:grid-cols-2 gap-m text-grøn-700 mx-xs md:mx-4xl mb-xl md:mb-4xl"
  >
    <!-- Venstre side med tekst -->
    <div class="">
      <h1
        class="font-headline text-headline2_s md:text-headline2_lg mt-s mb-sm md:mb-m"
      >
        Dit personlige blomster abonnement
      </h1>

      <div class="flex flex-col gap-s">
        <p class="text-body_s md:text-body_lg font-light">
          Gør dit hjem smukkere med et blomsterabonnement, der er <br /> tilpasset
          dine ønsker.
        </p>

        <!-- Ikoner -->
        <div
          class="flex flex-col gap-sm justify-center items-center -ml-2xl mb-xs"
        >
          <!-- Budget -->
          <div class="flex flex-col gap-3xs items-center">
            <svg
              class="w-[37px] h-[37px]"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="0.9"
                d="M17 8H5m12 0a1 1 0 0 1 1 1v2.6M17 8l-4-4M5 8a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.6M5 8l4-4 4 4m6 4h-4a2 2 0 1 0 0 4h4a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1Z"
              ></path>
            </svg>

            <p class="text-body_s font-light">
              <span class=""></span> Budget
            </p>
          </div>

          <!-- Farver-->
          <div class="flex flex-col gap-3xs items-center">
            <svg
              class="w-[37px] h-[37px]"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="0.9"
                d="M12 7h.01m3.486 1.513h.01m-6.978 0h.01M6.99 12H7m9 4h2.706a1.957 1.957 0 0 0 1.883-1.325A9 9 0 1 0 3.043 12.89 9.1 9.1 0 0 0 8.2 20.1a8.62 8.62 0 0 0 3.769.9 2.013 2.013 0 0 0 2.03-2v-.857A2.036 2.036 0 0 1 16 16Z"
              ></path>
            </svg>

            <p class="text-body_s font-light">
              <span class=""></span> Farvepræferencer
            </p>
          </div>

          <!-- Levering -->
          <div class="flex flex-col gap-3xs items-center">
            <svg
              class="w-[37px] h-[37px]"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="0.9"
                d="M4 10h16M8 14h8m-4-7V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"
              ></path>
            </svg>

            <p class="text-body_s font-light">
              <span class=""></span> Leveringsdato
            </p>
          </div>
        </div>

        <p class="text-body_s md:text-body_lg font-light">
          Skulle du ønske at pause dit abonnement, springe leveringer over eller
          opsige det, gør vi processen enkel og smertefri. Start dit abonnement
          i dag, og oplev glæden ved altid at have friske, smukke blomster i dit
          hjem.
        </p>
        <p class="text-body_s md:text-body_lg font-light">
          Bestil dit abonnement i dag og lad Magnolia bringe skønhed og ansvar
          ind i din hverdag.
        </p>
      </div>
    </div>

    <!-- Højre side med billede -->
    <div class="flex justify-center items-center">
      <Image
        src={index6}
        alt="Blomsterbillede"
        class="w-full h-full aspect-[1/1] object-cover fadein2"
      />
    </div>
  </section>

  <!-- BESTIL ABONNOMENT -->
  <section class="bg_image mb-xl md:mb-4xl">
    <!-- <div class="absolute inset-0 bg-white bg-opacity-25"></div> -->

    <div
      class="relative flex flex-col items-center justify-center h-full text-center px-m py-4xl"
    >
      <!-- Overskrift -->
      <h2
        class="font-headline text-headline2_s md:text-headline2_lg text-grøn-700 mb-sm md:mb-lg"
      >
        Bestil din buket her
      </h2>

      <!-- Knapper -->
      <div class="flex flex-col md:flex-row justify-center gap-2xs md:gap-m">
        <div>
          <div class="block md:hidden">
            <!-- Button for small screens -->
            <Button size="small" href="/personligt_abonnement"
              >Personligt abonnement</Button
            >
          </div>
          <div class="hidden md:block">
            <!-- Button for large screens -->
            <Button size="large" href="/personligt_abonnement"
              >Personligt abonnement</Button
            >
          </div>
        </div>
        <div>
          <div class="block md:hidden">
            <!-- Button for small screens -->
            <Button size="small" href="/personligt_abonnement"
              >Gave abonnement</Button
            >
          </div>
          <div class="hidden md:block">
            <!-- Button for large screens -->
            <Button size="large" href="/personligt_abonnement"
              >Gave abonnement</Button
            >
          </div>
        </div>
        <div>
          <div class="block md:hidden">
            <!-- Button for small screens -->
            <Button size="small" href="/personligt_abonnement"
              >Erhvervs abonnement</Button
            >
          </div>
          <div class="hidden md:block">
            <!-- Button for large screens -->
            <Button size="large" href="/personligt_abonnement"
              >Erhvervs abonnement</Button
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- INSTAGRAM -->
  <section class="bg-white flex justify-center mb-xl md:mb-4xl">
    <div class="text-center">
      <h2
        class="font-headline text-headline2_s md:text-headline2_lg text-grøn-700 mb-sm md:mb-lg"
      >
        Jeres blomster i hjemmet
      </h2>
      <div class="relative w- max-w-5xl mx-auto">
        <!-- Left Arrow -->
        <button id="prevBtn" class="carousel-button left gap-3xl">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="21"
            height="38"
            viewBox="0 0 21 38"
            fill="none"
          >
            <path
              d="M21 3.10563L17.8768 0L0.865293 16.9257C0.591077 17.1969 0.373455 17.5194 0.224953 17.8746C0.076451 18.2299 0 18.6108 0 18.9956C0 19.3804 0.076451 19.7613 0.224953 20.1166C0.373455 20.4718 0.591077 20.7943 0.865293 21.0655L17.8768 38L20.9971 34.8944L5.03059 19L21 3.10563Z"
              fill="#28281A"></path>
          </svg>
        </button>

        <!-- Carousel Container -->
        <div id="carousel" class="carousel-container flex gap-xl">
          <!-- Carousel Items -->
          <div class="carousel-item w-64 h-64 flex items-center justify-center gap-lg">
            <Image
              src={hjem9}
              alt=""
              class="w-[300px] h-[300px] object-cover"
            />
            <div
              class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
            >
              <Image
                src={hjem7}
                alt=""
                class="w-[300px] h-[300px] object-cover"
              />
              <div
                class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
              >
                <Image
                  src={hjem3}
                  alt=""
                  class="w-[300px] h-[300px] object-cover"
                />
                <div
                  class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
                >
                  <Image
                    src={hjem4}
                    alt=""
                    class="w-[300px] h-[300px] object-cover"
                  />
                  <div
                    class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
                  >
                    <Image
                      src={hjem5}
                      alt=""
                      class="w-[300px] h-[300px] object-cover"
                    />
                    <div
                      class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
                    >
                      <Image
                        src={hjem6}
                        alt=""
                        class="w-[300px] h-[300px] object-cover"
                      />
                      <div
                        class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
                      >
                        <Image
                          src={hjem7}
                          alt=""
                          class="w-[300px] h-[300px] object-cover"
                        />
                        <div
                          class="carousel-item w-64 h-64 flex items-center justify-center gap-lg"
                        >
                          <Image
                            src={hjem8}
                            alt=""
                            class="w-[300px] h-[300px] object-cover"
                          />
                        </div>

                        <!-- Right Arrow -->
                        <button
                          id="nextBtn"
                          class="carousel-button right gap-ml"
