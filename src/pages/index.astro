<script>
  // CAROUSEL
  const buketterCarousel = document.getElementById("buketter-carousel");
  const buketterPrevBtn = document.getElementById("buketter-prev-btn");
  const buketterNextBtn = document.getElementById("buketter-next-btn");
  const buketterItems = document.querySelectorAll(".buketter-slider-item");

  let currentIndex = 1;

  function updateActiveSlide() {
  buketterItems.forEach((item, index) => {
    if (index === currentIndex) {
      item.classList.add("active");
    } else {
      item.classList.remove("active");
    }
  });
}

  function moveCarousel(direction) {
    currentIndex += direction;

    if (currentIndex < 0) currentIndex = buketterItems.length - 1;
    if (currentIndex >= buketterItems.length) currentIndex = 0;

    buketterItems[currentIndex].scrollIntoView({
      behavior: "smooth",
      inline: "center",
    });

    updateActiveSlide();
  }

  buketterPrevBtn.addEventListener("click", () => moveCarousel(-1));
  buketterNextBtn.addEventListener("click", () => moveCarousel(1));

  updateActiveSlide();

  // DYNAMISK TEKSTSKIFT
  document.addEventListener("DOMContentLoaded", () => {
    const dynamicText = document.querySelector(".text-dynamic");
    const phrases = [
      "DEN NYBAGTE MOR",
      "FØDSELAREN",
      "TEAMET",
      "DIN KÆRE",
      "DIN MOR",
      "JUBILAREN",
      "ARBEJDSPLADSEN",
      "DIN MORMOR",
      "DIN SØSTER",
      "KONTORET",
      "STUDENTEN",
      "DINE KOLLEGAER",
    ];

    let index = 0;

    function updateText() {
      dynamicText.textContent = phrases[index];
      index = (index + 1) % phrases.length; // Loop tilbage til start
    }

    setInterval(updateText, 1500); // Skift tekst hver 3. sekund
  });

  // INSTAGRAM CAROUSEL
  const carousel = document.getElementById("carousel");
  const prevBtn = document.getElementById("prevBtn");
  const nextBtn = document.getElementById("nextBtn");

  const scrollStep = 272; // Image width (250px) + gap (22px)

  nextBtn.addEventListener("click", () => {
    carousel.scrollBy({ left: scrollStep, behavior: "smooth" });
  });

  prevBtn.addEventListener("click", () => {
    carousel.scrollBy({
      left: -scrollStep,
      behavior: "smooth",
    });
  });

  // ANIMATIONER
  import { inView, animate } from "motion";

  /* inView & return på grønnere valg */
  inView(".inviewfadein1", ({ target }) => {
    animate(target, { opacity: [0, 1] }, { duration: 1 });
    return () => {
      animate(target, { opacity: 1 });
    };
  });

  inView(".inviewfadein2", ({ target }) => {
    animate(target, { opacity: [0, 1] }, { delay: 0.5, duration: 1 });
    return () => {
      animate(target, { opacity: 1 });
    };
  });

  inView(".inviewfadein3", ({ target }) => {
    animate(target, { opacity: [0, 1] }, { delay: 1, duration: 1 });
    return () => {
      animate(target, { opacity: 1 });
    };
  });

  //   InView animation
  const fadein = document.querySelector(".fadein");

  inView(fadein, () => {
    fadein.classList.add("animate__animated", "animate__fadeIn");
  });

  const fadein2 = document.querySelector(".fadein2");

  inView(fadein2, () => {
    fadein2.classList.add("animate__animated", "animate__fadeIn");
  });
</script>
