import farver from "/public/imgs/farvevalg_blomster/farverige_nuancer.webp";
import rød from "/public/imgs/farvevalg_blomster/rød_nuance.webp";
import blå from "/public/imgs/farvevalg_blomster/blå_nuance.webp";
