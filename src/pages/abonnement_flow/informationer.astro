---
import MainLayout from "../../layouts/MainLayout.astro";
import Button from "../../components/Button.astro";
import Link from "../../components/Link.astro";
---

<MainLayout title="Informationer">
  <section
    class="bg-beige-50 h-fit w-full flex flex-col items-start px-s md:px-lg py-s md:py-lg text-grøn-700"
  >
    <div class="flex flex-col gap-ml mx-0 lg:mx-auto max-w-3xl">
      <!-- Progress dots -->
      <div
        class="w-fit h-[1px] bg-grøn-500 flex items-center mt-m gap-sm md:gap-2xl lg:gap-4xl"
      >
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-neutrals-200"
        ></span>
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-neutrals-200"
        ></span>
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-neutrals-200"
        ></span>
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-neutrals-200"
        ></span>
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-grøn-500"
        ></span>
        <span class="inline-block w-s h-s md:w-m md:h-m rounded bg-neutrals-200"
        ></span>
      </div>

      <!-- Indhold -->
      <div class="flex flex-col gap-m">
        <div class="flex flex-col gap-2xs">
          <h2 class="font-headline text-headline2_s md:text-headline2_lg">
            Dine informationer
          </h2>
          <p class="text-secondbody_s md:text-secondbody_lg font-light">
            Hvor skal vi sende dine blomster?
          </p>
        </div>

        <form
          action="/abonnement_flow/bekræftelse"
          class="flex flex-col items-start gap-lg"
        >
          <div class="flex flex-wrap gap-s md:gap-sm w-full">
            <div class="flex flex-col md:flex-row w-full gap-s">
              <!-- Fornavn -->
              <div class="flex flex-col w-full">
                <label
                  for="fornavn"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Fornavn*</label
                >
                <input
                  type="text"
                  name="fornavn"
                  id="fornavn"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
              <!-- Efternavn -->
              <div class="flex flex-col w-full">
                <label
                  for="efternavn"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Efternavn*</label
                >
                <input
                  type="text"
                  name="efternavn"
                  id="efternavn"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
            </div>
            <div class="flex flex-col md:flex-row w-full gap-s">
              <!-- Adresse -->
              <div class="flex flex-col w-full">
                <label
                  for="adresse"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Adresse*</label
                >
                <input
                  type="text"
                  name="adresse"
                  id="adresse"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
              <!-- Postnummer og by -->
              <div class="flex flex-col w-full">
                <label
                  for="postnummer"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Postnummer og by*</label
                >
                <input
                  type="text"
                  name="postnummer"
                  id="postnummer"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
            </div>
            <div class="flex flex-col md:flex-row w-full gap-s">
              <!-- Telefonnummer -->
              <div class="flex flex-col w-full">
                <label
                  for="telefonnummer"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Telefonnummer (til leveringsopdateringer)</label
                >
                <input
                  type="text"
                  name="telefonnummer"
                  id="telefonnummer"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
              <!-- Email -->
              <div class="flex flex-col w-full">
                <label
                  for="email"
                  class="pb-4xs text-body_s md:text-body_lg font-light"
                  >Email</label
                >
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="border-1 w-full border-grøn-700 bg-transparent focus:outline-none focus:ring-0"
                />
              </div>
            </div>
          </div>
          <button type="submit">
            <div class="block md:hidden">
              <!-- Button for small screens -->
              <Button size="small">Næste</Button>
            </div>
            <div class="hidden md:block">
              <!-- Button for large screens -->
              <Button size="large">Næste</Button>
            </div>
          </button>
          <!-- Tilbage knap -->
          <button class="flex gap-3xs">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="12"
              height="22"
              viewBox="0 0 12 22"
              fill="none"
            >
              <path
                d="M12 1.77471L10.2153 6.84504e-05L0.494453 9.67188C0.337758 9.82686 0.213403 10.0111 0.128545 10.2141C0.0436863 10.4171 0 10.6348 0 10.8547C0 11.0746 0.0436863 11.2923 0.128545 11.4953C0.213403 11.6983 0.337758 11.8825 0.494453 12.0375L10.2153 21.7144L11.9983 19.9397L2.87462 10.8572L12 1.77471Z"
                fill="#28281A"></path>
            </svg>
            <Link
              size="small"
              color="grøn"
              variant="textLink"
              href="/abonnement_flow/levering">Tilbage</Link
            >
          </button>
        </form>
      </div>
    </div>
  </section>
</MainLayout>
