---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import kontakt from "/public/imgs/kontakt/kontakt.webp";
---

<MainLayout title="Gave abonnement">
  <article>
    <div class="m-2xl block md:hidden">
      <!-- Button for small screens -->
      <Button size="small">Small Button</Button>
    </div>
    <div class="m-2xl hidden md:block">
      <!-- Button for large screens -->
      <Button size="large">Large Button</Button>
    </div>
    <h1>Index overskrift</h1>
    <p>
      Link til <Link href="https://www.kea.dk" target="_blank"
        >En anden side</Link
      >
    </p>
    <Image src={kontakt} alt="" />
  </article>
</MainLayout>
